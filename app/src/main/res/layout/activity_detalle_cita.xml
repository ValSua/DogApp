<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetalleCitaActivity">

    <!-- Incluir la Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- FrameLayout para manejar la superposición -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp">

        <!-- Container para los TextViews -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/razaperro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/sintoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 2"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/propietario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 3"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView 3"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Imagen superpuesta al contenedor de TextViews -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="prueba"
                android:layout_centerHorizontal="true"
                android:elevation="8dp"
                />
        </RelativeLayout>

    </FrameLayout>

    <!-- Botón de bote de basura en la esquina inferior derecha -->

    <!-- Botón de lapiz en la esquina inferior izquierda -->
    <ImageButton
        android:id="@+id/btnedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="23dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_pencil" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="363dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_arrow_back" />

</RelativeLayout>
